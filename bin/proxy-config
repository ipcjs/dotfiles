#!/bin/bash

# loop to read arg
# https://superuser.com/questions/186272/check-if-any-of-the-parameters-to-a-bash-script-match-a-string
port="1080"
host="127.0.0.1"
print="true"
while test $# -gt 0; do
    case "$1" in
        clear)
            export http_proxy=""
            export https_proxy=""
            export no_proxy=""
            export HTTP_PROXY=""
            export HTTPS_PROXY=""
            export NO_PROXY=""
            return 2>/dev/null || echo 'please perform by source' && exit 1
            ;;
        install)
            rc_file=~/.bashrc
            if [ -n "$ZSH_VERSION" ]; then
                rc_file=~/.zshrc
            fi
            # shellcheck disable=SC2016
            echo 'source $DOTFILES_REPO_DIR/bin/proxy-config --no-print' >>$rc_file
            return 2>/dev/null || exit 0
            ;;
        --port=*)
            port=${1:7}
            ;;
        --host=*)
            host=${1:7}
            ;;
        --no-print)
            print=""
            ;;
        *)
            echo "unknown arg: $1"
            return 1 2>/dev/null || exit 1
            ;;
    esac
    shift
done

export http_proxy="http://$host:$port"
export https_proxy="http://$host:$port"
export no_proxy="localhost,\
127.0.0.1,\
dl.google.com,\
maven.aliyun.com,\
cdn.npm.taobao.org,\
registry.npm.taobao.org,\
storage.flutter-io.cn,\
pub.flutter-io.cn,\
services.gradle.org,\
apple.com,\
downloads.gradle-dn.com"

# adapt uppercase
export HTTP_PROXY=$http_proxy
export HTTPS_PROXY=$https_proxy
export NO_PROXY=$no_proxy

if [ -n "$print" ]; then
    echo "proxy=$http_proxy"
    echo "no_proxy=$no_proxy"
    echo "nonProxyHosts=$(echo $no_proxy | tr ',' '|')"
fi
